<Window x:Class="BrowserTabManager.ManageScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrowserTabManager"
        mc:Ignorable="d"
        Title="Manage Screen" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="ScreenTitleLabel" Grid.Row="0" Content="Screen" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="5"/>
        <ListBox x:Name="TabsListBox" Grid.Row="1" ItemsSource="{Binding TabList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding Frame_TitleTextBox.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0"/>
                        <CheckBox IsChecked="{Binding displayFrame, Mode=TwoWay}" Grid.Column="1" VerticalAlignment="Center" Margin="3,0,3,0"/>
                        <Button Content="Delete" Grid.Column="2" Margin="0" Click="DeleteButton_Click"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>

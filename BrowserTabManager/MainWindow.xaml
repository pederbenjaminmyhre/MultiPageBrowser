<Window x:Class="BrowserTabManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrowserTabManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="LowerMasterGrid" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <!-- Grid in Column 0 with two rows -->
        <Grid x:Name="BookmarkGrid" Grid.Column="0" Background="#E2E6EC">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <Label Content="Bookmarks" Foreground="Black" FontSize="12" Margin="8,0,8,2" HorizontalAlignment="Center" />
                <TextBox x:Name="txtSearchBookmarks" Margin="8,0,8,8" Height="20">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                                <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                            </Border>
                                            <ContentControl x:Name="Watermark"
                                                           IsHitTestVisible="False"
                                                           Content="Search Bookmarks"
                                                           Foreground="#888"
                                                           Margin="16,0,0,0"
                                                           VerticalAlignment="Center"
                                                           Opacity="0.8"
                                                           Visibility="Collapsed"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#CCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="8,0,8,0"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>
            <ScrollViewer x:Name="BookmarkScroll" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="BookmarkStack" Orientation="Vertical" />
            </ScrollViewer>
        </Grid>

        <!-- GridSplitter between Column 0 and 2 -->
        <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Background="#a0b0c1"/>

        <!-- Grid in Column 2 with two rows -->
        <Grid x:Name="FeatureGrid" Grid.Column="2" Grid.Row="0"  Background="#a0b0c1">
            <Grid.RowDefinitions>
                <RowDefinition Height="44" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="FeatureBanner" Grid.Row="0"  Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <TextBox x:Name="txtLaunchUrl" Margin="0,10,0,0" Height="25" MaxWidth="800">
                        <TextBox.Effect>
                            <DropShadowEffect Color="#616b75" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                        </TextBox.Effect>
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="#616b75" BorderThickness="0">
                                                    <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                                </Border>
                                                <ContentControl x:Name="Watermark"
                                                               IsHitTestVisible="False"
                                                               Content="Browse the internet"
                                                               Foreground="#888"
                                                               Margin="12,4,8,8"
                                                               VerticalAlignment="Center"
                                                               Opacity="0.8"
                                                               Visibility="Collapsed"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Padding" Value="8,3,8,0"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8,8,8,0">
                    <Label Content="Rows" VerticalAlignment="Center" Margin="0,0,0,2" />
                    <Button x:Name="btnAddRowToFramesGrid" Width="15" Height="15" Background="Transparent" Click="btnAddRowToFramesGrid_Click" VerticalContentAlignment="Center" Padding="0,0,0,0" ToolTip="Add Row">
                        <Image Source="pack://application:,,,/Icons/Plus.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                    <Button x:Name="btnSubtractRowFromFramesGrid" Width="15" Height="15" Background="Transparent" Click="btnSubtractRowFromFramesGrid_Click" VerticalContentAlignment="Center" Padding="0,0,0,0" ToolTip="Remove Row" Margin="2,0,0,0">
                        <Image Source="pack://application:,,,/Icons/Minus.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid x:Name="FramesGrid" Grid.Row="1" Grid.Column="0" Margin="0,0,0,6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>

        <!-- GridSplitter between Column 2 and 4 -->
        <GridSplitter Grid.Column="3" Width="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Background="#a0b0c1"/>

        <!-- Grid in Column 4 with two rows -->
        <Grid x:Name="TabGrid" Grid.Column="4" Background="#E2E6EC">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="SearchHeaderGrid" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel x:Name ="SearchHeaderGridRow0" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0">
                    <Button x:Name="HideTabListButton" Content="Hide" Margin="0,0,8,0" />
                    <Button x:Name="OrganizeTabsButton" Content="Manage" />
                </StackPanel>
                <TextBox x:Name="txtSearchTabs" Margin="8,0,8,8" Height="20" Grid.Row="1">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                                <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                                            </Border>
                                            <ContentControl x:Name="Watermark"
                                                           IsHitTestVisible="False"
                                                           Content="Search Tabs"
                                                           Foreground="#888"
                                                           Margin="16,0,0,0"
                                                           VerticalAlignment="Center"
                                                           Opacity="0.8"
                                                           Visibility="Collapsed"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#CCC"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="8,0,8,0"/>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
            <ScrollViewer x:Name ="TabScroll" Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="#E2E6EC">
                <StackPanel x:Name="TabStack"  Orientation="Vertical" Background="#E2E6EC" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
